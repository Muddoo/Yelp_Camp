<%- include("./partials/header.ejs") %>

<div class="container">
  <% if(message) { %>
    <h6 class="alert alert-danger" role="alert"> <%= message %> </h6>
  <% } %>  
  <h1 class="text-center mb-5">Login</h1>
  <form action="/login" method="POST" class="form-group">
    <input
      type="text"
      placeholder="UserName"
      name="username"
      class="form-control w-50 mx-auto mb-3"
      required
    />
    <input
      type="password"
      placeholder="password"
      name="password"
      class="form-control w-50 mx-auto mb-3"
      required
    />
    <button type="submit" class="btn btn-outline-dark d-block mx-auto w-50" style="font-size: 20px;">
      SignIn
    </button>
  </form>
</div>

<%- include("./partials/footer.ejs") %>
